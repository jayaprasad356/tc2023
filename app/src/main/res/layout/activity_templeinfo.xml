<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.TempleinfoActivity"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">

        <ImageView
            android:id="@+id/imgbackbttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_left_24"
            android:backgroundTint="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_16sdp"
            />

    </RelativeLayout>


    <com.google.android.material.card.MaterialCardView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:backgroundTint="@color/PrimaryRed"
        android:layout_marginHorizontal="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            >



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:background="@drawable/temple_img"
                />

            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >



                <TextView
                    android:id="@+id/tvTemplename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temple Name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    />

                <TextView
                    android:layout_below="@+id/tvTemplename"
                    android:id="@+id/tvTempleLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temple Location"
                    android:textSize="@dimen/_12sdp"
                    />


                <ScrollView
                    android:layout_below="@+id/tvTempleLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        >





                <TextView
                    android:id="@+id/tvTempledescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On Friday, the Madurai Bench of Madras HC quashed two defamation cases against devotee, activist Rangarajan Narasimhan who had alleged mismanagement by officials managing Sri Ranganatha Swamy Temple and questioned the condition of thousands of temples that are facing negligence.


“Tamil Nadu is a land of temples. They have played a central role in our culture. However, their current condition leaves a lot to be desired. Lands endowed for their maintenance have been gobbled up by private interests. Antique idols have been stolen and smuggled overseas. The temple staff are paid a pittance. Thousands of temples are facing utter neglect. Even poojas are not being performed. Much needs to be done to revive their glory,” the bench added."
                    android:textSize="@dimen/_14sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:padding="@dimen/_10sdp"
                    />


                    </androidx.cardview.widget.CardView>


                </ScrollView>

            </RelativeLayout>

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Do You want to Exit?"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/black"
        android:id="@+id/id_exit_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

   <!-- <com.telugupanchangam.telugucalender.Activites.TemplateView
        android:id="@+id/my_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_margin="8dp"
        app:gnt_template_type="@layout/gnt_medium_template_view"
        app:layout_constraintTop_toBottomOf="@+id/id_exit_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message"
        android:id="@+id/id_exit_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_template"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_margin="15dp"/>

    <com.telugucalendar.telugupanchangamr.Ads.TemplateView
        android:id="@+id/my_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_margin="8dp"
        app:gnt_template_type="@layout/gnt_medium_template_view"
        app:layout_constraintTop_toBottomOf="@+id/id_exit_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/id_exit_message"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <Button
            android:backgroundTint="@color/gnt_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_exit_pos_btm"
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Yes"/>

        <Button
            android:backgroundTint="@color/gnt_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_rate_us_btm"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="Rate Us"/>

        <Button
            android:backgroundTint="@color/gnt_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:id="@+id/id_exit_neg_btm" />

        <!-- Centered "Rate Us" button moved to Play Store for rating -->


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>